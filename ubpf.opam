opam-version: "2.0"
name: "ubpf"
version: "0.1"
synopsis: "OCaml bindings for userspace eBPF VM"
license: "LGPL-3 with OCaml linking exception"
maintainer: "Raman Varabets <roman.vorobets@gmail.com>"
authors: [
  "Raman Varabets <roman.vorobets@gmail.com>"
  "ygrek <ygrek@autistici.org>"
]
homepage: "https://github.com/cyberhuman/ocaml-ubpf"
bug-reports: "https://github.com/cyberhuman/ocaml-ubpf/issues"
dev-repo: "git+https://github.com/cyberhuman/ocaml-ubpf.git"
available: [
  os = "linux"
]
depends: [
  "ocaml" {>= "4.02"}
  "ocamlfind" {build}
  "dune" {build}
]
build: [
  ["dune" "subst"] {pinned}
  ["dune" "build" "-p" name "-j" jobs]
]
